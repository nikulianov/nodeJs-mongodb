<h1>Добавить курс</h1>
<form action="/courses/edit" method="POST" class="form-course">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Название</label>
        <span class="helper-text" data-error="Введите название"></span>
    </div>

    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required value="{{course.price}}">
        <label for="price">Цена</label>
        <span class="helper-text" data-error="Введите цену"></span>
    </div>

    <div class="input-field">
        <input id="url" name="url" type="text" class="validate" required value="{{course.url}}">
        <label for="url">url изображения</label>
        <span class="helper-text" data-error="Вставьте URL изображения"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="id" value="{{course.id}}">

    <button type="submit" class="btn btn-primary">Сохранить</button>
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <input type="hidden" name="id" value="{{course.id}}">
    <button type="submit" class="btn red">Удалить</button>
</form>