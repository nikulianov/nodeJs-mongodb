<h1>Добавить курс</h1>
<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" name="title" type="text" class="validate" required>
    <label for="title">Название</label>
    <span class="helper-text" data-error="Введите название"></span>
  </div>

  <div class="input-field">
    <input id="price" name="price" type="number" class="validate" required>
    <label for="price">Цена</label>
    <span class="helper-text" data-error="Введите цену"></span>
  </div>

  <div class="input-field">
    <input id="url" name="url" type="text" class="validate" required>
    <label for="url">url изображения</label>
    <span class="helper-text" data-error="Вставьте URL изображения"></span>
  </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">
  <button class="btn btn-primary">Добавить курс</button>
</form>