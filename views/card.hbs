<h1>Корзина</h1>

<div id="card">
  {{#if courses.length}}
    <table>
      <thead>
      <tr>
        <th>Название</th>
        <th>Цена за шт.</th>
        <th>Кол-во</th>
        <th>Действия</th>
      </tr>
      </thead>
      <tbody>
      {{#each courses}}
        <tr>
          <td>{{title}}</td>
          <td>{{price}}</td>
          <td>{{count}}</td>
          <td>
            <button class="btn small js-deleteCard" data-id="{{id}}" data-csrf="{{@root.csrf}}">Удалить</button>
          </td>
        </tr>
      {{/each}}
      </tbody>
    </table>
    <p><strong>Общая стоимость:</strong> <span class="price">{{price}}</span></p>

      <form action="/orders" method="POST">
          <input type="hidden" name="_csrf" value="{{csrf}}">
          <button type="submit" class="btn">Сделать заказ</button>
      </form>
  {{else}}
    <p>Корзина пуста</p>
  {{/if}}
</div>