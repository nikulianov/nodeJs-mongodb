<h1>Заказы</h1>

{{#if orders.length}}
    {{#each orders}}
        <div class="row">
            <div class="col s6 offset-s3">
                <div class="card">
                    <div class="card-content">
                        <span class="card-title">
                            Заказ {{_id}}
                        </span>
                        <p class="date">{{date}}</p>
                        <p><em>{{{user.userId.name}}}</em> {{{user.userId.email}}}</p>
                        <ol>
                            {{#each courses}}
                                <li>{{{course.title}}} <small>x{{{count}}}</small></li>
                            {{/each}}

                        </ol>
                        <hr>
                        <p class="price">{{{price}}}</p>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
{{/if}}